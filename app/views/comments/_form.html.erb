<%= form_for [@post,@comment] do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div id="txt-field">
      <%= f.label :comment %><br>
      <%= f.text_area :comment %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
